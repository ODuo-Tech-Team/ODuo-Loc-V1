  // Arquivamento (separado de status, como WhatsApp)
  archived         Boolean   @default(false)
  archivedAt       DateTime?
  archivedByUserId String?
  archivedByUser   User?     @relation("ArchivedConversations", fields: [archivedByUserId], references: [id])

  // Timestamps de estado do bot
  botActivatedAt     DateTime? // Quando o bot foi ativado
  botTransferredAt   DateTime? // Quando transferiu para humano
  lastAgentMessageAt DateTime? // Última mensagem de agente

  // Dados de qualificação pelo bot
  qualificationData  Json? // { rentalIntent, equipmentMentioned, customerName, etc }
  qualificationScore Int?  // 0-100

  // Tags/Labels para organização
  tags String[]

  // Vinculação com CRM
  leadId     String?
  lead       Lead?     @relation(fields: [leadId], references: [id])
  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])

  // Instância
  instanceId String
  instance   WhatsAppInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  // Tenant (para queries diretas)
  tenantId String

  messages          WhatsAppMessage[]
  scheduledMessages WhatsAppScheduledMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([instanceId, contactPhone])
  @@index([tenantId, status])
  @@index([tenantId, lastMessageAt])
  @@index([tenantId, archived])
  @@index([tenantId, assignedToId])
  @@index([tenantId, teamId])
  @@index([leadId])
  @@index([customerId])
}

enum ConversationStatus {
  OPEN
  PENDING
  RESOLVED
  CLOSED
}

// Mensagem de WhatsApp
model WhatsAppMessage {
  id String @id @default(cuid())

  // ID da mensagem na Uazapi/WhatsApp
  externalId String? @unique

  // Direção
  direction MessageDirection

  // Tipo e conteúdo
  type    MessageType @default(TEXT)
  content String?     @db.Text

  // Mídia (para imagens, áudio, vídeo, documentos)
  mediaUrl      String?
  mediaType     String?
  mediaFileName String?
  mediaDuration Int? // Duração em segundos (áudio/vídeo)

  // Status de entrega
  status    MessageStatus @default(PENDING)
  sentAt    DateTime?
  deliveredAt DateTime?
  readAt    DateTime?
  failedAt  DateTime?
  failedReason String?

  // Metadados
  isFromBot  Boolean @default(false)
  quotedMessageId String? // Mensagem citada/respondida
  metadata   Json?

  // Relacionamentos
  conversationId String
  conversation   WhatsAppConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Usuário que enviou (se foi mensagem manual)
  sentByUserId String?
  sentByUser   User?  @relation("SentMessages", fields: [sentByUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([conversationId, createdAt])
  @@index([externalId])
}

enum MessageDirection {
  INBOUND  // Recebida do cliente
  OUTBOUND // Enviada para o cliente
}

enum MessageType {
  TEXT
  IMAGE
  AUDIO
  VIDEO
  DOCUMENT
  STICKER
  LOCATION
  CONTACT
  TEMPLATE
  SYSTEM // Mensagens de sistema/atividade (bot atribuiu, transferiu, etc.)
}

enum MessageStatus {
  PENDING   // Aguardando envio
  SENT      // Enviada (1 check)
  DELIVERED // Entregue (2 checks)
  READ      // Lida (2 checks azuis)
  FAILED    // Falha no envio
}

// Template de resposta rápida
model WhatsAppTemplate {
  id String @id @default(cuid())

  name     String
  category String? // ex: "Saudação", "Orçamento", "Agendamento"
  content  String  @db.Text

  // Variáveis disponíveis: {{nome}}, {{empresa}}, etc.
  variables String[]

  // Atalho para uso rápido (ex: "/orcamento")
  shortcut String?

  tenantId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, shortcut])
  @@index([tenantId])
}

// Configuração do Bot de IA
model WhatsAppBotConfig {
  id String @id @default(cuid())

  // Status
  enabled Boolean @default(false)

  // OpenAI - Chave por tenant
  openaiApiKey   String? @db.Text // Criptografada
  openaiModel    String  @default("gpt-4o-mini") // gpt-4o-mini ou gpt-4o

  // Configurações do modelo
  temperature Float @default(0.7)
  maxTokens   Int   @default(500)

  // Prompt do sistema
  systemPrompt String? @db.Text

  // Comportamento
  includeEquipmentCatalog Boolean @default(true)  // Incluir catálogo nas respostas
  includeRentalPrices     Boolean @default(false) // Incluir preços
  autoCreateLeads         Boolean @default(false) // Criar leads automaticamente (desativado por padrão)

  // Palavras-chave para transferir para humano
  transferKeywords String[] @default(["atendente", "humano", "pessoa", "falar com alguém"])

  // Horário de funcionamento (JSON: { "mon": { "start": "08:00", "end": "18:00" }, ... })
  businessHours Json?

  // Mensagens automáticas
  welcomeMessage    String? @db.Text // Primeira mensagem
  awayMessage       String? @db.Text // Fora do horário
  transferMessage   String? @db.Text // Ao transferir para humano
  closingMessage    String? @db.Text // Ao encerrar conversa

  // Relacionamento
  instanceId String           @unique
  instance   WhatsAppInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Mensagem agendada/Follow-up
model WhatsAppScheduledMessage {
  id String @id @default(cuid())

  // Conversa alvo
  conversationId String
  conversation   WhatsAppConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Tipo de mensagem agendada
  type ScheduledMessageType

  // Conteudo
  content String @db.Text

  // Agendamento
  scheduledFor DateTime
  sentAt       DateTime?

  // Status
  status ScheduledMessageStatus @default(PENDING)
  error  String?

  // Configuracao
  // Ex: { "inactiveDays": 3, "hasTag": "interessado", "noReply": true }
  conditions Json?

  // Tenant
  tenantId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, status, scheduledFor])
  @@index([conversationId])
}

enum ScheduledMessageType {
  FOLLOW_UP    // Reativacao por inatividade
  REMINDER     // Lembrete agendado manualmente
  CAMPAIGN     // Campanha em massa
}

enum ScheduledMessageStatus {
  PENDING   // Aguardando envio
  SENT      // Enviada com sucesso
  CANCELLED // Cancelada
  FAILED    // Falha no envio
}

// Regras de follow-up automatico
model WhatsAppFollowUpRule {
  id String @id @default(cuid())

  name    String
  enabled Boolean @default(true)

  // Trigger: quando executar
  // Ex: { "type": "inactivity", "days": 3, "onlyIfNoReply": true }
  trigger Json

  // Acao: o que fazer
  // Ex: { "message": "Ola! Vi que voce tinha interesse...", "includeContext": true }
  action Json

  // Limites
  maxAttempts Int @default(2) // Maximo de follow-ups por conversa

  // Tenant
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, enabled])
}

// Time de atendimento WhatsApp (estilo Chatwoot)
model WhatsAppTeam {
  id String @id @default(cuid())

  name        String  // "Vendas", "Suporte"
  description String?
  color       String? // "#10b981" para badge colorido

  // Configuração de auto-atribuição
  autoAssign     Boolean @default(true)
  assignmentMode String  @default("round_robin") // round_robin, least_busy, manual

  // Relacionamentos
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  members       WhatsAppTeamMember[]
  conversations WhatsAppConversation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, name])
  @@index([tenantId])
}

// Membro de um time de atendimento
model WhatsAppTeamMember {
  id String @id @default(cuid())

  role String @default("agent") // agent, leader

  // Status de disponibilidade
  isOnline       Boolean   @default(false)
  lastAssignedAt DateTime?

  // Métricas de atendimento
  activeConversations Int @default(0)
  totalHandled        Int @default(0)

  // Relacionamentos
  teamId String
  team   WhatsAppTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@index([teamId, isOnline])
}

